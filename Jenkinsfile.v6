#!/usr/bin/env groovy

pipeline{
    agent none
    stages{ 
        stage('Docker-Wine'){
            agent {
                docker { 
                    image 'wine-msvc-qt-sshagent'
                    label 'mac_wine'
                }
            }
            stages{
                stage('Clean'){
                    steps{
                        cleanWs()
                    }
                }
                stage('Checkout'){
                    steps{
                        checkout scm
                    }
                }
                stage('Build'){
                    steps{
                        sh 'bash build-wine-msvc.sh'
                    }
                }
            }
        }
    }
}
